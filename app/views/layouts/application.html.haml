!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %meta{content: "", name: "description"}
    %meta{content: "", name: "author"}
    %title Deal Hunter

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#navbar"}, aria: {expanded: "false", controls: "navbar"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Deal Hunter", root_path, class: "navbar-brand"
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              = link_to "Deals", deals_path
            %li
              = link_to "Agents", agents_path
            %li
              = link_to "Messages", messages_path
          %ul.nav.navbar-nav.pull-right
            %li.dropdown
              - if current_user.present?
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Welcome, #{current_user.name}
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to user_path(current_user) do
                      %i.icon-cog
                      Profile
                  %li.divider
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %i.icon-off
                      Logout
              - else
                %ul.nav.navbar-nav
                  %li
                    = link_to "Sign up", new_user_registration_path
                  %li
                    = link_to "Log in", new_user_session_path
    .container
      - flash.each do |name, msg|
        = content_tag :div, class: "alert alert-#{name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do
          %button.close{type: "button", data: {dismiss: "alert"} }
            %span{aria: {hidden: "true"} } &times;
            %span.sr-only Close
          = msg
      = yield
