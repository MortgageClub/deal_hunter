.page-container{:style => "min-height:237px"}
  / Page content
  .page-content
    / Main sidebar
    .content-wrapper
      / Page header
      .page-header
        .page-header-content

      / /page header
      / Content area
      .content
        / Basic datatable
        .panel.panel-flat
          .panel-heading
            %h5.panel-title Deal Information

          .panel-body
            = link_to deals_path, class: 'btn btn-default pull-right' do
              %span.glyphicon.glyphicon-list-alt
              Back
            %dl.dl-horizontal
              %dt Listing:
              %dd= @deal.listing_id
              %dt Price:
              %dd= @deal.price
              %dt Address:
              %dd= @deal.address
              %dt City:
              %dd= @deal.city
              %dt Zipcode:
              %dd= @deal.zipcode
              %dt Agent:
              %dd= @deal.agent