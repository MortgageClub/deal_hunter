.page-header
  = link_to new_message_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Message
  %h1 Listing messages

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Content
        %th Reply
        %th Sender
        %th Phone number
        %th Status
        %th
        %th
        %th

    %tbody
      - @messages.each do |message|
        %tr
          %td= message.content
          %td= message.reply
          - if message.messageable_id
            %td= link_to message.messageable.to_s, polymorphic_path(message.messageable)
          - else
            %td= 'N/A'
          %td= message.phone_number
          %td= message.status
          %td= link_to 'Show', message
          %td= link_to 'Edit', edit_message_path(message)
          %td= link_to 'Destroy', message, data: { confirm: 'Are you sure?' }, method: :delete
