.page-container{:style => "min-height:237px"}
  / Page content
  .page-content
    / Main sidebar
    .content-wrapper
      / Page header
      .page-header
        .page-header-content

      / /page header
      / Content area
      .content
        / Basic datatable
        .panel.panel-flat
          .panel-heading
            %h5.panel-title Agent Information

          .panel-body
            = link_to agents_path, class: 'btn btn-default pull-right' do
              %span.glyphicon.glyphicon-list-alt
              Back
            %dl.dl-horizontal
              %dt Full name:
              %dd= @agent.full_name
              %dt First name:
              %dd= @agent.first_name
              %dt Last name:
              %dd= @agent.last_name
              %dt Phone:
              %dd= @agent.phone
              %dt Email:
              %dd= @agent.email
              %dt Office name:
              %dd= @agent.office_name